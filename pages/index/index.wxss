/**index.wxss**/
page {
  background-color: #f3f3f7;
  /* background-color:red; */
}

.container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.headBox {
  width: 100%;
  background-repeat: no-repeat;
  background-size: cover;
}

.headBox .head-title{
  font-size: 24rpx;
  color: #ebcb8f;
  padding: 5rpx 0 5rpx 25rpx;   
}


.gameBox {
  display: inline-block;
  background-color: #e6e7ed;
  border-radius: 10rpx;
  margin: 10rpx 0 10rpx 25rpx;
  width: 340rpx;
  height: 150rpx;
  position: relative;
}

.game-bd {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.game-ft {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 20rpx 6rpx;
  width: 300rpx;
  display: flex;
  justify-content: space-between;
}

.gameTeam {
  display: inline-block;
  padding: 15rpx 25rpx;
}

.gameScore {
  display: inline-block;
  padding: 0 25rpx;
}

.gameTeam image {
  width: 35rpx;
  height: 35rpx;
}

.gameTeam span {
  font-size: 24rpx;
  padding-left: 20rpx;
}

.gameTeam .team_1, .team_2 {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.gameScore .teamScore {
  display: block;
  height: 19rpx;
  line-height: 19rpx;
  
}

.gameScore .scoreM {
 margin-bottom: 20rpx;
}

.game-ft .startTime, .isStart {
  display: inline-block;
  font-size: 20rpx;
  color: #898989;
}

.head-ft {
  display: flex;
  justify-content: space-around;
  
}

.head-ft .ft-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head-ft image {
  width: 60rpx;
  height: 60rpx;
}

.head-ft text {
  font-size: 22rpx;
  color: #ebcb8f;
}

.bodyBox {
  margin-top: 25rpx;
  background-color: #fff;
}

.articleBox {
  padding: 25rpx 0;
  margin: 0 25rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: flex-start;
}

.article-hd {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-right: 40rpx;
}

.article-hd .articleTitle{
  font-size: 40rpx;
}

.article-hd .articlecomments {
  font-size: 22rpx;
  color: #898989;
  padding-top: 12rpx;
}

.articleBox .article-hd .articleTitle {
  font-size: 30rpx;
}

.article-ft {
  height: 135rpx;
}

.articleBox .article-ft image {
  width: 210rpx;
  height: 135rpx;
}



