    position: absolute;
    top: 0;
    right: 19%;
}

.calendar-icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-left: 12px;
    vertical-align: -5px;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 20px 20px;
