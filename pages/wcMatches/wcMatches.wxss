/* pages/wcMatches/wcMatches.wxss */
.container {
    width: 100%;
    height: 100vh;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f3f3f7;
}

page {
    background-color: #f3f3f7;
}

.header_bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    /* padding: 0 56rpx; */
    height: 84rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 35rpx;
    color: #666;
    border-bottom: 1px solid #e5e5e5;
}

.header_bar span {
    padding: 0 50rpx;
}

.wc_bd {
    margin-top: 84rpx;
    overflow: hidden;
}

.barOn {
    color: #2d73ff;
}

/* .gameOrder {
    margin-top: 35rpx;
} */

.gameOrder .gameDate {
    font-size: 25rpx;
}

.weui-cells {
    margin-top: 10rpx;
}

.weui-cell {
    border: 1px solid #fff;
}

.weui-cell__hd {
    text-align: center;
}

.weui-cell__hd text {
    display: block;
}

.weui-cell__hd text:nth-child(1) {
    margin-bottom: 15rpx;
}

.weui-cell__hd text:nth-child(1) {
    font-size: 24rpx;
}

.weui-cell__hd text:nth-child(2) {
    font-size: 20rpx;
    color: #898989;
}

.weui-cell__bd {
    margin-left: 50rpx;
}

.weui-cell__bd view {
    display: block;
    display: flex;
    align-items: center;
}

.weui-cell__bd view:nth-child(1) {
    margin-bottom: 10rpx;
}

.weui-cell__bd image {
    width: 50rpx;
    height: 50rpx;
}

.weui-cell__bd span {
    font-size: 28rpx;
    padding-left: 20rpx;
}

.weui-cell__ft {
    display: flex;
    align-items: center;
}

.weui-cell__ft .ft_left {
    margin-right: 50rpx;
}

.weui-cell__ft .gameScore {
    display: block;
}

.weui-cell__ft .scoreM{
    margin-bottom: 10rpx;
}

.weui-cell__ft .gameLive view{
    display: inline;
    display: flex;
    align-items: center;
}

.weui-cell__ft .gameLive .livePic{
    width: 24rpx;
    height: 24rpx;
    margin-right: 5rpx;
}

.weui-cell__ft .gameLive span {
    font-size: 22rpx;
}